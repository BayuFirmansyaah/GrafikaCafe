<%- include('../templates/header') %>
<%- include('../templates/sidebar') %>

<div class="content-page">
    <div class="container-fluid">
        <div class="row my-3">
            <div class="col-lg-12">
                <h2 class="f-nunito-5">Daftar Menu Grafika Cafe</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12" id="buttonwrap">
                <button class="btn btn-success f-nunito-5" id="btn-create-order">Create Order</button>
                <button class="btn btn-danger f-nunito-5 d-none" id="btn-cancel-order">Cancel Order</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">Pesanan</button>
                  
            </div>
        </div>

        <div class="row mt-5" id="data-menu">
            
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">List Pesanan</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="listed-menu">
        
        </div>
        <div class="modal-footer">
          <div id="total-count" >Total Rp.0</div>
          <button type="button" class="btn btn-secondary ml-5" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="btn-checkout">checkout</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
<div class="modal fade" id="checkout" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">List Pesanan</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="listed-menu">
        <form>
          <div class="form-group">
            <label for="exampleInputEmail1">Total Pembayaran</label>
            <input type="email" class="form-control" id="input-total-count" readonly>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Total di bayarkan</label>
            <input type="email" class="form-control" id="jumlah-bayar" aria-describedby="emailHelp">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary ml-5" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="completed-order">Order</button>
      </div>
    </div>
  </div>
</div>

<%- include('../templates/footer') %>