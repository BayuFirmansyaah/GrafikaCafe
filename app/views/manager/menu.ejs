<%- include('../templates/header') %>
<%- include('../templates/sidebar') %>

<div class="content-page">
    <div class="container-fluid">
        <div class="row my-3">
            <div class="col-lg-12">
                <h2 class="f-nunito-5">Daftar Menu Grafika Cafe</h2>
            </div>
        </div>

        <!-- button -->
        <div class="row">
          <div class="col-lg-12">
              <button class="btn btn-primary" data-toggle="modal" data-target="#modalAddMenu">Add Menu</button>
              <button class="btn btn-success" id="btn-edit-menu">Edit Menu</button>
              <button class="btn btn-danger" id="btn-delete-menu">Delete Menu</button>
          </div>
        </div>


        <!-- data table -->
        <div class="row" id="table-data-menu" style="margin-top:15px">
            <div class="col-lg-12">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th scope="col" style="width:50px">No</th>
                    <th scope="col" style="width:30px">
                      <input type="checkbox" style="margin:0px 10px">
                    </th>
                    <th scope="col">Nama Menu</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Harga</th>
                    <th scope="col">Thumbnail</th>
                  </tr>
                </thead>
                <tbody>
                
                </tbody>
              </table>
            </div>
        </div>
    </div>
</div>


<!-- modal add menu -->
<div class="modal fade" id="modalAddMenu" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Tambah Menu Baru</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/manager/menu" enctype="multipart/form-data">
          <div class="form-group">
            <label >Nama</label>
            <input type="text" class="form-control" name="nama">
            <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
          </div>

          <div class="form-group">
            <label >Stock</label>
            <input type="text" class="form-control" name="stock">
            <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
          </div>

          <div class="form-group">
            <label for="exampleFormControlSelect1">Kategori</label>
            <select class="form-control" id="add-kategori" name="id_jenis">
            </select>
          </div>

          <div class="form-group">
            <label >Harga</label>
            <input type="text" class="form-control" name="harga">
            <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
          </div>

          <div class="form-group">
            <label >Foto</label>
            <div class="custom-file">
              <input type="file" class="custom-file-input" id="customFile" name="thumbnail">
              <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
          </div>
          
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
        <button type="submit" class="btn btn-primary">Tambah</button>
      </form>
      </div>
    </div>
  </div>
</div>
<!-- end modal add menu -->

<!-- modal edit menu -->
<div class="modal fade" id="modalEditMenu" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Perbarui Menu</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/manager/menu/edit" enctype="multipart/form-data" id="form-edit">
          <input type="hidden" name="id" id="id">
          <input type="hidden" name="foto_lama" id="foto_lama">
          <div class="form-group">
            <label >Nama</label>
            <input type="text" class="form-control" name="nama" id="nama">
            <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
          </div>

          <div class="form-group">
            <label >Stock</label>
            <input type="text" class="form-control" name="stock" id="stock">
            <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
          </div>

          <div class="form-group">
            <label for="exampleFormControlSelect1">Kategori</label>
            <select class="form-control" id="edit-kategori" name="id_jenis">
            </select>
          </div>

          <div class="form-group">
            <label >Harga</label>
            <input type="text" class="form-control" name="harga" id="harga">
            <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
          </div>
          
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
        <button type="submit" class="btn btn-primary">Edit</button>
      </form>
      </div>
    </div>
  </div>
</div>
<!-- end modal edit menu -->

<%- include('../templates/footer') %>