<%- include('../templates/header') %>
<%- include('../templates/sidebar') %>

<div class="content-page">
    <div class="container-fluid">
        <div class="row my-3">
            <div class="col-lg-12">
                <h2 class="f-nunito-5">Daftar Akun Grafika Cafe</h2>
            </div>
        </div>

        <div class="row bar">
            <div class="col-lg-12">
                <button class="btn btn-primary" 
                    data-toggle="modal" data-target="#tambah-akun"
                >Tambah Akun</button>
                <button class="btn btn-success" id="edit-akun">Edit Akun</button>
                <button class="btn btn-danger" id="hapus-akun">Hapus Akun</button>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th scope="col" style="width:50px">No</th>
                        <th scope="col" style="width:30px">
                          <input type="checkbox" style="margin:0px 10px">
                        </th>
                        <th scope="col">Username</th>
                        <th scope="col">Name</th>
                        <th scope="col">Role</th>
                      </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                  </table>
            </div>
        </div>

    </div>
</div>


  
  <!-- Modal -->
  <div class="modal fade" id="tambah-akun" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Buat Akun Baru</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form id="form-tambah">
                <div class="form-group">
                  <label for="exampleInputEmail1">username</label>
                  <input type="text" class="form-control" name="t_username">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">password</label>
                    <input type="text" class="form-control" name="t_password">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">ulangi password</label>
                    <input type="text" class="form-control" name="t_r_password">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">name</label>
                    <input type="text" class="form-control" name="t_name">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Role</label>
                    <select class="form-control" name="t_role">
                        <option value="3">Kasir</option>
                        <option value="2">Admin</option>
                        <option value="1">Manager</option>
                    </select>
                  </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Buat</button>
        </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="modalEditAkun" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Perbarui Akun Baru</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form id="form-edit">
                <div class="form-group">
                  <label for="exampleInputEmail1">username</label>
                  <input type="text" class="form-control" name="u_username" id="u_username">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">password</label>
                    <input type="text" class="form-control" name="u_password" id="u_password">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">ulangi password</label>
                    <input type="text" class="form-control" name="u_r_password" id="u_r_password">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">name</label>
                    <input type="text" class="form-control" name="u_name" id="u_name">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Role</label>
                    <select class="form-control" name="u_role" id="u_role">
                        <option value="3">Kasir</option>
                        <option value="2">Admin</option>
                        <option value="1">Manager</option>
                    </select>
                  </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Perbarui</button>
        </form>
        </div>
      </div>
    </div>
  </div>

<%- include('../templates/footer') %>